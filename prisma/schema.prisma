generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  quizzes   Quiz[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  questions   Question[]
  results     Result[]
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @db.ObjectId
  isPublished Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

type Question {
  text          String
  options       String[]
  correctAnswer Int
  order         Int
}

model Result {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  quizId         String   @db.ObjectId
  playerName     String
  score          Int
  totalQuestions Int
  timestamp      DateTime @default(now())
  quiz           Quiz     @relation(fields: [quizId], references: [id])

  @@unique([quizId, playerName, timestamp]) // Garante que não haverá duplicatas no mesmo momento
}

type Answer {
  questionId String
  selected   Int
  correct    Boolean
}